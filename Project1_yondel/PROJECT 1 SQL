drop table items;
CREATE TABLE ITEMS (
ITEM_ID INT,
ITEM_NAME VARCHAR(225),
ITEM_TYPE VARCHAR(225),
ITEM_DAM_INC INT,
ITEM_HEALTH_INC INT,
ITEM_DESC VARCHAR(225));

